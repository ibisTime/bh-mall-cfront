.no-cart-wrapper {
  text-align: center;
  padding-top: 180rpx;
}
.no-cart-wrapper .cart-img {
  width: 164rpx;
  height: 164rpx;
}
.no-cart-wrapper .cart-tip {
  display: block;
  margin-top: 50rpx;
  font-size: 30rpx;
  color: rgb(51, 51, 51);
}
.no-cart-wrapper .no-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 60rpx auto 0;
  border-radius: 6rpx;
  border: 2rpx solid rgb(114, 165, 44);
  color: rgb(114, 165, 44);
  font-size: 30rpx;
}
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background-color: #fff;
}
.cart-inner-footer {
  display: flex;
}
.cart-footer .left-item {
  flex: 1;
}
.cart-footer .right-item {
  flex: 0 0 240rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 34rpx;
  background-color: rgb(255, 168, 0);
  color: #fff;
}
.cart-footer .chose-item {
  float: left;
  line-height: 98rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
}
.cart-footer .price-item {
  float: right;
  line-height: 98rpx;
  padding-right: 50rpx;
  font-size: 30rpx;
}
.price-item .price {
  color: rgb(252, 68, 24);
}
.chose {
  float: left;
  width: 40rpx;
  height: 40rpx;
  background-size: 40rpx;
  background-position: right center;
  background-repeat: no-repeat;
  background-image: url('data:image/png;base64,');
}
.chose.act {
  background-image: url('data:image/png;base64,');
}
.cart-footer .chose {
  margin-right: 20rpx;
  margin-top: 29rpx;
}
.cart-item {
  display: flex;
  flex-direction: row;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #eee;
}
.cart-list .cart-item:last-child {
  border-bottom: none;
}
.cart-item .chose-item {
  width: 66rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
}
.cart-item .img-item {
  width: 160rpx;
  height: 130rpx;
}
.cart-item .img-item .p-img {
  width: 100%;
  height: 100%;
}
.info-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 16rpx 22rpx;
  padding-right: 4rpx;
}
.info-item .title {
  line-height: 1.2;
  font-size: 26rpx;
  color: #484848;
}
.info-item .delete-item {
  flex: 1;
  margin-left: 30rpx;
  height: 40rpx;
  background-size: 40rpx;
  background-repeat: no-repeat;
  background-position: right;
  background-image: url('data:image/png;base64,');
}
.info-item .btm-info {
  display: flex;
  align-items: center;
  width: 100%;
}
.info-item .btm-info .price {
  font-size: 30rpx;
  color: rgb(252, 68, 24);
}
.diamonds {
  width: 50rpx;
  height: 50rpx;
  background-color: #f5f5f5;
  font-size: 34rpx;
  color: #888;
  text-align: center;
}
.diamonds.decrease {
  margin-left: 32rpx;
}
.num {
  float: right;
  width: 90rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}