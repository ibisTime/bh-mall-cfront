
swiper{
  height: 376rpx;
}
swiper image{
  width: 100%;
  height: 100%;   
}

/* 头部 */
.top{
  height: 88rpx;
  padding: 14rpx 24rpx;
  position: relative;
}
.proName{
  height: 60rpx;
  padding-left: 70rpx;
  font-size: 28rpx;
  color: rgb(179, 179, 179);
  background-color: rgb(245, 245, 245);
  border-radius: 40rpx;
}
.search{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 50%;
  left: 61rpx;
  transform: translateY(-50%);
}

/* 商品列表 */
.indexShow{
  padding: 30rpx 24rpx;
  border-bottom: 1px solid #eee;
  position: relative;
  overflow: hidden;
}
.indexShow image{
  width: 240rpx;
  height: 240rpx;
  float: left;
}
.indexShow>view{
  margin-left: 260rpx;
}
.showDetail{
  height: 240rpx;
  padding: 10rpx 0;
  position: relative;
}
.showDetail text{
  display: block;
  font-size: 16px;
}
.showDetail .showTitle{
  font-size: 28rpx;
  color: rgb(72,72,72);
}
.showDetail .showServe{
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgb(102, 102, 102);
}
.showDetail .showPrice{
  position: absolute;
  left: 0;
  bottom: 10rpx;
}
.showDetail .showPrice .price{
  display: inline-block;
  color: rgb(255, 80, 0);
  font-size: 34rpx;
}
.showDetail .showPrice .unit {
  display: inline-block;
  color: rgb(255, 80, 0);
  font-size: 22rpx;
}
.showDetail .showPrice .showOldPrice{
  display: inline-block;
  margin-left: 30rpx;
  font-size: 22rpx;
  color: rgb(153, 153, 153);
}
.showPrice{
  color: #e92322;
}
.home-cart-logo {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(204, 204, 204, 0.8);
  color: rgba(255, 255, 255, 0.8);
}
.home-cart-logo .home-cart-img {
  width: 36rpx;
  height: 36rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}