/* pages/myself/myself.wxss */

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}




.myself{
    height: 100%;
    background-color: #f7f7f7;
}

.top{
    height: 300rpx;
    /* background-image: url('../../images/img/wodebeijing@2x.png'); */
    background-color: #73A62E;
    position: relative;
}
.top .user{
    width: 100%;
    height: 128rpx;
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
}
.top .user .head-pic{
    width: 128rpx;
    height: 128rpx;
    float: left;
    border-radius: 50%;
    padding: 3rpx;
    margin-left: 20rpx;
    overflow: hidden;
}
.top .user .head-pic image{
    width: 100%;
    height: 100%;
}
.top .user .user-info{
    margin-left: 200rpx;
    color: #fff;
}
.top .user .user-info .name{
    display: block;
    margin-top: 20rpx;
    font-size: 36rpx;
}
.top .user .user-info .tel{
    display: block;
    margin-top: 20rpx;
    font-size: 24rpx;
}

.item + .item {
    margin-top: 20rpx;
}
.item{
    /* padding: 43rpx 24rpx; */
    padding: 0 24rpx;
    height: 120rpx;
    overflow: hidden;
    background-color: #fff;
}
.item .ico{ 
    margin-top: 43rpx;
    float: left;
    width: 35rpx;
    height: 35rpx;
    vertical-align: middle;
}
.item .text{ 
    margin-top: 38rpx;
    float: left;
    margin-left: 30rpx;
    font-size: 32rpx;
    color: rgb(72, 72, 72);
}
.item .more{ 
    margin-top: 43rpx;
    float: right;
    width: 18rpx;
    height: 28rpx;
}